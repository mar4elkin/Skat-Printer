{
  "compilerOptions": {
    "lib": [
      "es5", "es6", "dom", "dom.iterable", "es2017"
    ],
    "target": "es2017",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}